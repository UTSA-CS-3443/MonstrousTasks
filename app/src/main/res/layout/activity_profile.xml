<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingTop="80dp"
    android:weightSum="1">

    <!-- Title -->
    <TextView
        android:id="@+id/my_text_view"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="Profile"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="DuplicateIds,HardcodedText" />

    <!-- Top Image -->
    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/easy_4" />

    <!-- Tasks Completed -->
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tasks_completed"
        android:layout_height="40dp"
        android:layout_marginHorizontal="50dp"
        android:text="Tasks Completed:"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <!-- Easy Tasks -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/easy_tasks"
        android:layout_marginHorizontal="50dp"
        android:text="Easy Tasks:"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <!-- Medium Tasks -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/medium_tasks"
        android:layout_marginHorizontal="50dp"
        android:text="Medium Tasks:"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <!-- Hard Tasks -->
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/hard_tasks"
        android:layout_height="40dp"
        android:layout_marginHorizontal="50dp"
        android:text="Hard Tasks:"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <!-- Highscore -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/highscore"
        android:text="Highscore:"
        android:textColor="@color/black"
        android:textSize="25sp" />





    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/green"
        android:id="@+id/home_button"
        android:text="Home" />


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom Border -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@drawable/bottom_border"
        android:scaleType="fitXY"
        android:layout_gravity="bottom" />
</LinearLayout>
