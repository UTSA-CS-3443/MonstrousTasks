<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/my_text_view"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:text="CHOOSE YOUR BATTLES"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold" />
    <ScrollView
        android:layout_height="500dp"
        android:layout_width="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/HW1"
                    android:layout_width="400dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:text="Take Out Trash        Difficulty: 1"
                    android:hint="Take Out Trash,1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:strokeColor="@color/black"
                    app:strokeWidth="2dp"/>

            </LinearLayout>
    <Button
        android:id="@+id/HW2"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:text="Homework         Difficulty: 2"
        android:hint="Homework,2"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:strokeColor="@color/black"
        app:strokeWidth="2dp"/>

    <Button
        android:id="@+id/HW3"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:text="Work Out         Difficulty: 3"
        android:hint="Work Out,3"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:strokeColor="@color/black"
        app:strokeWidth="2dp"/>

    <Button
        android:id="@+id/HW4"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:text="Get Groceries         Difficulty: 2"
        android:hint="Get Groceries,2"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:strokeColor="@color/black"
        app:strokeWidth="2dp"/>

    <Button
        android:id="@+id/HW6"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:text="Be Cool         Difficulty: 1"
        android:hint="Be Cool,1"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:strokeColor="@color/black"
        app:strokeWidth="2dp"/>
            <Button
                android:id="@+id/HW5"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:text="Clean Room         Difficulty: 1"
                android:hint="Clean Room,1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:strokeColor="@color/black"
                app:strokeWidth="2dp"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:id="@+id/ss_home_button"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:backgroundTint="@color/white"
            android:strokeColor="@color/black"
            android:text="Home"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:strokeWidth="2dp"/>
        <Button
            android:id="@+id/continue_button"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:backgroundTint="@color/white"
            android:strokeColor="@color/black"
            android:text="Continue"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:strokeWidth="2dp" />

    </LinearLayout>
   <ImageView
         android:layout_width="400dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:src="@drawable/bottom_border"/>

</LinearLayout>